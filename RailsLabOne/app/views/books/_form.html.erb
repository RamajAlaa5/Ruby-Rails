
<%= form_with model: book do |form|%>
  <div>
      <%= form.label  :name %><br>
      <%= form.text_field :name %><br>
      <% @book.errors.full_messages_for(:name).each do |message| %>
      <div> <%= message %></div>
      <% end %>
  </div>
 

  <div>
      <%= form.label  :price %><br>
      <%= form.text_field :price %><br>
      <% @book.errors.full_messages_for(:price).each do |message| %>
      <div> <%= message %> </div>
      <% end %>
  </div>

      <%= form.label  :user_id %><br>
      <%= form.text_field :user_id %><br>
      <% @book.errors.full_messages_for(:user_id).each do |message| %>
      <div> <%= message %> </div>
      <% end %>
  </div>
  <div>
      <%= form.submit %>
      
  </div>

<%end%>
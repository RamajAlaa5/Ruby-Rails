<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<h1>Books List</h1>
<%= link_to "create new book" ,new_book_path %>
<table class="table">
  
    <tr>
      
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    
    
        <% @books.each do |book| %>
        <tr>
            <td>
                <%= book.name %>
            </td>
       
            <td>
                <%= book.price %>
            </td>
            <td>
                <a href="<%=book_path(book) %>" class="btn btn-primary">View</a>
                <%# <%=link_to book.name,book %> 
                <a href="<%=edit_book_path(book)%>" class="btn btn-success">update</a>
                <a  class="btn btn-danger"
                 <%= link_to "Delete", book_path(book), data: {
               turbo_method: :delete,
               turbo_confirm: "Are you sure to delete this book?"
             } %> 
                </a>
                
            </td>    
        
        </tr>
        
    </tbody>

        <% end %>
</table>

